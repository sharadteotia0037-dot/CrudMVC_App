@model IEnumerable<CrudMVC_App.Entities.ApplicationUser>

<h2>User Management</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Full Name</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FullName</td>

                <td>
                    @if (user.IsDeleted)
                    {
                        <span class="badge bg-danger">Deleted</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Active</span>
                    }
                </td>

                <td>
                    @* Delete button *@
                    @if (!user.IsDeleted)
                    {
                        <a asp-action="DeleteUser"
                           asp-route-id="@user.Id"
                           class="btn btn-danger btn-sm">
                            Delete
                        </a>
                    }

                    @* Restore button *@
                    @if (user.IsDeleted)
                    {
                        <a asp-action="RestoreUser"
                           asp-route-id="@user.Id"
                           class="btn btn-warning btn-sm">
                            Restore
                        </a>
                    }
                    @* Enable2FA *@
                    @if (!user.TwoFactorEnabled)
                    {
                        <a asp-action="Enable2FA"
                           asp-route-id="@user.Id"
                           class="btn btn-warning btn-sm">
                            Enable 2FA
                        </a>
                    }
                    else
                    {
                        <span class="badge bg-success">
                            2FA Enabled
                        </span>
                    }
                    @* Role management *@
                    <a asp-action="EditUserRoles"
                       asp-route-id="@user.Id"
                       class="btn btn-info btn-sm">
                        Roles
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Users" asp-route-page="@(ViewBag.CurrentPage - 1)"
   class="btn btn-secondary">Previous</a>

<a asp-action="Users" asp-route-page="@(ViewBag.CurrentPage + 1)"
   class="btn btn-secondary">Next</a>